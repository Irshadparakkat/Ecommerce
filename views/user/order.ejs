<%- include('userpartials/userhead.ejs') %>

<div style="margin-top: 100px;">
  <h1 style="background: none; margin-left: 180px;">Orders</h1>
  <div class="row">
    <% if (orders.length === 0) { %>
    <div class="col-md-6">
      <div class="card" style="width: 400px;">
        <div class="card-body">
          <div class="alert alert-warning" role="alert">
            You have no orders yet.
          </div>
        </div>
      </div>
    </div>
    <% } else { %>

    <% orders.forEach(function(order) { %>
    <div class="col-md-6">
      <div class="card" style="width: 400px;">
        <div class="card-body">
          <h5 class="card-title">Order Details</h5>
          <p class="card-text">Order ID: <%= order.orderId %></p>
          <p class="card-text">Status: <%= order.status %></p>
          <p class="card-text">Payment Method: <%= order.payment %></p>
          <p class="card-text">Total: <%= order.total %></p>
          <a href="/order/<%= order.orderId %>" class="btn btn-primary">View details</a>

          <% if(order.status == 'order delivered'){%>
            <a href="/cancelorder/<%= order.orderId %>" class="btn btn-success">Return Order</a>
         <% } else { %>
          <a href="/cancelorder/<%= order.orderId %>" class="btn btn-success">Cancel Order</a>
          <% } %>
        </div>
      </div>
    </div>
    <% }) %>
    <% } %>
  </div>
</div>

<%- include('userpartials/userfooter.ejs') %>
