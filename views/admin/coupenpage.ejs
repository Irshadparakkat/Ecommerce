<%- include('partials/adminhead.ejs') %>



    <div class="mobile-menu-overlay"></div>

    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                
                <div class="card-box mb-30">
                    <h2 class="h4 pd-20">All coupon</h2>
                    <table class="data-table table nowrap">
                        <thead>

                            <tr>
                                <th class="table-plus datatable-nosort">#</th>
                                <th>Code</th>
                                <th>Status</th>

                                <th>Exp-date</th>
                                <th>Min Cart-Amount</th>
                                <th class="datatable-nosort">Discount Amount</th>
                                <th class="datatable-nosort">Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            <% coupen.forEach((element,i)=>{ %>
                                <tr>
                                    <th scope="row">
                                        <%= i+1 %>
                                    </th>
                                    <td>
                                        <%= element.code %>
                                    </td>
                                    <td>
                                        <%= element.status %>
                                    </td>
                                    <td>
                                        <%= element.expiredAfter.toLocaleString() %>
                                    </td>
                                    <td>
                                        <%= element.mincartAmout %>
                                    </td>
                                    <td>
                                        <%= element.maxdiscountAmount %>
                                    </td>


                                    <td>
                                        <a href="/admin/deletecoupon/<%=element._id%>"
                                            onclick="return confirm('Are you sure')" class="btn btn-danger">Delete</a>
                                    </td>


                                </tr>
                                <% }) %>


                        </tbody>
                    </table>
                </div>
                <a href="addnewcoupen"  class="btn btn-primary">Add-Coupon</a>
            </div>
        </div>

        <%- include('partials/adminfooter.ejs') %>